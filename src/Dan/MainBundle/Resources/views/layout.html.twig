{% extends '::base.html.twig' %}

{% block title %}Danilo Sanchi{% endblock %}

{% block head_style %}
    {% stylesheets filter='lessphp,cssembed,?yui_css'
        '@DanMainBundle/Resources/public/less/index.less'
        %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet"
            media="screen" />
    {% endstylesheets %}
    {% stylesheets filter='cssembed,?yui_css'
        '@DanMainBundle/Resources/public/jquery-ui-1.8.18.custom/css/ui-lightness/jquery-ui-1.8.18.custom.css'
        '@DanMainBundle/Resources/public/colorpicker/css/colorpicker.css'
        '@DanMainBundle/Resources/public/tagit/css/jquery.tagit.css'
         %}
        <link href="{{ asset_url }}"
            type="text/css"
            rel="stylesheet"
            media="screen" />
    {% endstylesheets %}
    <link href="http://fonts.googleapis.com/css?family=Gloria+Hallelujah" rel="stylesheet" type="text/css">
{% endblock head_style %}

{% block body %}

    {% block container %}
        <div class="container">
            <div class="content">
                <div class="row">
                    {% block content %}
                    {% endblock content %}
                </div>
            </div>
            <footer>
                {% block footer %}
                {% endblock footer %}
            </footer>
        </div>
    {% endblock container %}
{% endblock %}

{% block foot_script %}
    {# To only use a subset or add more js overwrite and copy paste this block #}
    {% javascripts
            'http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js'
            'http://ajax.cdnjs.com/ajax/libs/json2/20110223/json2.js'
            'http://ajax.cdnjs.com/ajax/libs/underscore.js/1.3.1/underscore-min.js'
            'http://d3js.org/d3.v3.min.js'

            '@DanMainBundle/Resources/public/jquery-ui-1.8.18.custom/js/jquery-ui-1.8.18.custom.min.js'

            '@DanMainBundle/Resources/public/tagit/js/tag-it.js'
            '@DanMainBundle/Resources/public/js/backbone-min.js'
            '@DanMainBundle/Resources/public/js/app.js'
            '@DanMainBundle/Resources/public/colorpicker/js/bootstrap-colorpicker.js'
            '@DanMainBundle/Resources/public/bootstrap/js/bootstrap-transition.js'
            '@DanMainBundle/Resources/public/bootstrap/js/bootstrap-modal.js'
            '@DanMainBundle/Resources/public/bootstrap/js/bootstrap-dropdown.js'
            '@DanMainBundle/Resources/public/bootstrap/js/bootstrap-scrollspy.js'
            '@DanMainBundle/Resources/public/bootstrap/js/bootstrap-tab.js'
            '@DanMainBundle/Resources/public/bootstrap/js/bootstrap-tooltip.js'
            '@DanMainBundle/Resources/public/bootstrap/js/bootstrap-popover.js'
            '@DanMainBundle/Resources/public/bootstrap/js/bootstrap-alert.js'
            '@DanMainBundle/Resources/public/bootstrap/js/bootstrap-button.js'
            '@DanMainBundle/Resources/public/bootstrap/js/bootstrap-collapse.js'
            '@DanMainBundle/Resources/public/bootstrap/js/bootstrap-carousel.js'
            '@DanMainBundle/Resources/public/bootstrap/js/bootstrap-typeahead.js'
            filter="?yui_js"
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>

    {% endjavascripts %}
{% endblock foot_script %} 
